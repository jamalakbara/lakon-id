<div class="page-width">
  {% assign idx = 1 %}
  {% for block in section.blocks %}
  <!-- The Modal -->
  <div id="modal-image-{{ idx }}" class="modal-image-page modal-image-slider-page">

    <!-- The Close Button -->
    <span class="close-{{ idx }}">&times;</span>

    <figure class="custom-page-figure">
      <img class="modal-content" id="img-{{ idx }}" />
    </figure>
  </div>

  <script>
    // Get the modal
    const modal{{ idx }} = document.getElementById("modal-image-{{ idx }}");

    // Get the image and insert it inside the modal - use its "alt" text as a caption
    {% comment %} const img{{ idx }} = document.querySelector(".image-item-{{ idx }}"); {% endcomment %}
    const img{{ idx }} = document.querySelectorAll(".image-item-{{ idx }}");
    
    const modalImg{{ idx }} = document.getElementById("img-{{ idx }}");
    {% comment %} {% if block.settings.image1 %}
      const modalImg1{{idx }} = document.getElementById("img-{{ idx }}-{{ idxScript }}");
    {% endif %}
    {% assign idxScript = idxScript | plus: 1 %}

    {% if block.settings.image2 %}
      const modalImg2{{idx }} = document.getElementById("img-{{ idx }}-{{ idxScript }}");
    {% endif %}
    {% assign idxScript = idxScript | plus: 1 %}

    {% if block.settings.image3 %}
      const modalImg3{{idx }} = document.getElementById("img-{{ idx }}-{{ idxScript }}");
    {% endif %}
    {% assign idxScript = idxScript | plus: 1 %}

    {% if block.settings.image4 %}
      const modalImg4{{idx }} = document.getElementById("img-{{ idx }}-{{ idxScript }}");
    {% endif %} {% endcomment %}
    
    img{{ idx }}.forEach(img => {
      img.onclick = function(){
        modal{{ idx }}.style.display = "flex";
        modalImg{{idx }}.src = this.src;
        {% comment %} {% if block.settings.image1 %}
          modalImg1{{idx }}.src = this.src;
        {% endif %}
        {% assign idxScript = idxScript | plus: 1 %}

        {% if block.settings.image2 %}
          modalImg2{{idx }}.src = this.src;
        {% endif %}
        {% assign idxScript = idxScript | plus: 1 %}

        {% if block.settings.image3 %}
          modalImg3{{idx }}.src = this.src;
        {% endif %}
        {% assign idxScript = idxScript | plus: 1 %}

        {% if block.settings.image4 %}
          modalImg4{{idx }}.src = this.src;
        {% endif %} {% endcomment %}
      }
    })
    {% comment %} img{{ idx }}.onclick = function(){
      modal{{ idx }}.style.display = "flex";
      {% if block.settings.image1 %}
        modalImg1{{idx }}.src = this.src;
      {% endif %}
      {% assign idxScript = idxScript | plus: 1 %}

      {% if block.settings.image2 %}
        modalImg2{{idx }}.src = this.src;
      {% endif %}
      {% assign idxScript = idxScript | plus: 1 %}

      {% if block.settings.image3 %}
        modalImg3{{idx }}.src = this.src;
      {% endif %}
      {% assign idxScript = idxScript | plus: 1 %}

      {% if block.settings.image4 %}
        modalImg4{{idx }}.src = this.src;
      {% endif %}
    } {% endcomment %}

    // Get the <span> element that closes the modal
    const span{{ idx }} = document.getElementsByClassName("close-{{ idx }}")[0];

    // When the user clicks on <span> (x), close the modal
    span{{ idx }}.onclick = function() {
      modal{{ idx }}.style.display = "none";
    } 
  </script>
  {% assign idx = idx | plus: 1 %}
  {% endfor %}
</div>

<script>
  const allModal = document.querySelectorAll('.modal-image-slider-page');
  window.onclick = function(event) {
    allModal.forEach(modal => {
      if (event.target == modal) {
        modal.style.display = "none";
      }
    });
  } 
</script>

