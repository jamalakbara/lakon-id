{% doc %}
  @prompt
    A magazine-style editorial layout

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-editorial-layout-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: {{ block.settings.section_padding }}px;
    background-color: {{ block.settings.background_color }};
    font-family: {{ block.settings.body_font.family }}, {{ block.settings.body_font.fallback_families }};
    font-weight: {{ block.settings.body_font.weight }};
    line-height: 1.6;
  }

  .ai-editorial-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 60px;
    border-bottom: 1px solid {{ block.settings.accent_color }};
    padding-bottom: 40px;
  }

  .ai-editorial-title-{{ ai_gen_id }} {
    font-family: {{ block.settings.heading_font.family }}, {{ block.settings.heading_font.fallback_families }};
    font-weight: {{ block.settings.heading_font.weight }};
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 16px;
    letter-spacing: -0.02em;
  }

  .ai-editorial-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0 0 24px;
    opacity: 0.8;
  }

  .ai-editorial-meta-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 24px;
    font-size: 14px;
    color: {{ block.settings.text_color }};
    opacity: 0.7;
  }

  .ai-editorial-meta-item-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .ai-editorial-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 2fr 1fr;
    gap: 40px;
    margin-bottom: 60px;
  }

  .ai-editorial-hero-image-{{ ai_gen_id }} {
    grid-column: 1 / -1;
    margin-bottom: 40px;
  }

  .ai-editorial-hero-image-{{ ai_gen_id }} img {
    width: 100%;
    height: 400px;
    object-fit: cover;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-editorial-hero-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 400px;
    background-color: #f8f8f8;
    border-radius: {{ block.settings.image_border_radius }}px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-editorial-hero-placeholder-{{ ai_gen_id }} svg {
    width: 80px;
    height: 80px;
    opacity: 0.3;
  }

  .ai-editorial-content-{{ ai_gen_id }} {
    grid-column: 2;
  }

  .ai-editorial-content-{{ ai_gen_id }} p {
    font-size: {{ block.settings.body_text_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0 0 24px;
    text-align: justify;
  }

  .ai-editorial-content-{{ ai_gen_id }} p:first-letter {
    font-size: {{ block.settings.body_text_size | times: 3 }}px;
    font-weight: bold;
    float: left;
    line-height: 1;
    margin: 4px 8px 0 0;
    color: {{ block.settings.accent_color }};
  }

  .ai-editorial-sidebar-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  .ai-editorial-sidebar-left-{{ ai_gen_id }} {
    grid-column: 1;
  }

  .ai-editorial-sidebar-right-{{ ai_gen_id }} {
    grid-column: 3;
  }

  .ai-editorial-sidebar-item-{{ ai_gen_id }} {
    padding: 24px;
    background-color: {{ block.settings.sidebar_bg_color }};
    border-radius: {{ block.settings.card_border_radius }}px;
    border: 1px solid {{ block.settings.accent_color }};
  }

  .ai-editorial-sidebar-title-{{ ai_gen_id }} {
    font-family: {{ block.settings.heading_font.family }}, {{ block.settings.heading_font.fallback_families }};
    font-weight: {{ block.settings.heading_font.weight }};
    font-size: 18px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 16px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .ai-editorial-sidebar-text-{{ ai_gen_id }} {
    font-size: 14px;
    color: {{ block.settings.text_color }};
    line-height: 1.5;
  }

  .ai-editorial-quote-{{ ai_gen_id }} {
    grid-column: 1 / -1;
    text-align: center;
    padding: 40px;
    background-color: {{ block.settings.quote_bg_color }};
    border-left: 4px solid {{ block.settings.accent_color }};
    margin: 40px 0;
    font-style: italic;
  }

  .ai-editorial-quote-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.quote_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0 0 16px;
    font-weight: 300;
  }

  .ai-editorial-quote-author-{{ ai_gen_id }} {
    font-size: 14px;
    color: {{ block.settings.text_color }};
    opacity: 0.7;
    font-style: normal;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .ai-editorial-image-gallery-{{ ai_gen_id }} {
    grid-column: 1 / -1;
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
    margin: 40px 0;
  }

  .ai-editorial-gallery-item-{{ ai_gen_id }} img {
    width: 100%;
    height: 200px;
    object-fit: cover;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-editorial-gallery-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 200px;
    background-color: #f8f8f8;
    border-radius: {{ block.settings.image_border_radius }}px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-editorial-gallery-placeholder-{{ ai_gen_id }} svg {
    width: 40px;
    height: 40px;
    opacity: 0.3;
  }

  .ai-editorial-cta-{{ ai_gen_id }} {
    grid-column: 1 / -1;
    text-align: center;
    padding: 40px;
    background-color: {{ block.settings.cta_bg_color }};
    border-radius: {{ block.settings.card_border_radius }}px;
    margin-top: 40px;
  }

  .ai-editorial-cta-title-{{ ai_gen_id }} {
    font-family: {{ block.settings.heading_font.family }}, {{ block.settings.heading_font.fallback_families }};
    font-weight: {{ block.settings.heading_font.weight }};
    font-size: 24px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 16px;
  }

  .ai-editorial-cta-text-{{ ai_gen_id }} {
    font-size: 16px;
    color: {{ block.settings.text_color }};
    margin: 0 0 24px;
  }

  .ai-editorial-cta-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 12px 32px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    transition: background-color 0.3s ease;
  }

  .ai-editorial-cta-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  @media screen and (max-width: 768px) {
    .ai-editorial-layout-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding | divided_by: 2 }}px;
    }

    .ai-editorial-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 24px;
    }

    .ai-editorial-content-{{ ai_gen_id }},
    .ai-editorial-sidebar-left-{{ ai_gen_id }},
    .ai-editorial-sidebar-right-{{ ai_gen_id }},
    .ai-editorial-quote-{{ ai_gen_id }},
    .ai-editorial-image-gallery-{{ ai_gen_id }},
    .ai-editorial-cta-{{ ai_gen_id }} {
      grid-column: 1;
    }

    .ai-editorial-hero-image-{{ ai_gen_id }} img,
    .ai-editorial-hero-placeholder-{{ ai_gen_id }} {
      height: 250px;
    }

    .ai-editorial-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.8 }}px;
    }

    .ai-editorial-meta-{{ ai_gen_id }} {
      flex-direction: column;
      gap: 12px;
    }

    .ai-editorial-image-gallery-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }

    .ai-editorial-content-{{ ai_gen_id }} p:first-letter {
      font-size: {{ block.settings.body_text_size | times: 2 }}px;
    }
  }
{% endstyle %}

<article class="ai-editorial-layout-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <header class="ai-editorial-header-{{ ai_gen_id }}">
    {% if block.settings.article_title != blank %}
      <h1 class="ai-editorial-title-{{ ai_gen_id }}">{{ block.settings.article_title }}</h1>
    {% endif %}
    
    {% if block.settings.article_subtitle != blank %}
      <p class="ai-editorial-subtitle-{{ ai_gen_id }}">{{ block.settings.article_subtitle }}</p>
    {% endif %}
    
    <div class="ai-editorial-meta-{{ ai_gen_id }}">
      {% if block.settings.author_name != blank %}
        <div class="ai-editorial-meta-item-{{ ai_gen_id }}">
          <span>By {{ block.settings.author_name }}</span>
        </div>
      {% endif %}
      
      {% if block.settings.publish_date != blank %}
        <div class="ai-editorial-meta-item-{{ ai_gen_id }}">
          <span>{{ block.settings.publish_date }}</span>
        </div>
      {% endif %}
      
      {% if block.settings.read_time != blank %}
        <div class="ai-editorial-meta-item-{{ ai_gen_id }}">
          <span>{{ block.settings.read_time }} min read</span>
        </div>
      {% endif %}
    </div>
  </header>

  <div class="ai-editorial-grid-{{ ai_gen_id }}">
    <div class="ai-editorial-hero-image-{{ ai_gen_id }}">
      {% if block.settings.hero_image %}
        <img
          src="{{ block.settings.hero_image | image_url: width: 1200 }}"
          alt="{{ block.settings.hero_image.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.hero_image.width }}"
          height="{{ block.settings.hero_image.height }}"
        >
      {% else %}
        <div class="ai-editorial-hero-placeholder-{{ ai_gen_id }}">
          {{ 'hero-apparel-1' | placeholder_svg_tag }}
        </div>
      {% endif %}
    </div>

    <div class="ai-editorial-sidebar-left-{{ ai_gen_id }} ai-editorial-sidebar-{{ ai_gen_id }}">
      {% if block.settings.sidebar_left_title != blank or block.settings.sidebar_left_content != blank %}
        <div class="ai-editorial-sidebar-item-{{ ai_gen_id }}">
          {% if block.settings.sidebar_left_title != blank %}
            <h3 class="ai-editorial-sidebar-title-{{ ai_gen_id }}">{{ block.settings.sidebar_left_title }}</h3>
          {% endif %}
          {% if block.settings.sidebar_left_content != blank %}
            <div class="ai-editorial-sidebar-text-{{ ai_gen_id }}">{{ block.settings.sidebar_left_content }}</div>
          {% endif %}
        </div>
      {% endif %}
    </div>

    <div class="ai-editorial-content-{{ ai_gen_id }}">
      {% if block.settings.article_content != blank %}
        {{ block.settings.article_content }}
      {% endif %}
    </div>

    <div class="ai-editorial-sidebar-right-{{ ai_gen_id }} ai-editorial-sidebar-{{ ai_gen_id }}">
      {% if block.settings.sidebar_right_title != blank or block.settings.sidebar_right_content != blank %}
        <div class="ai-editorial-sidebar-item-{{ ai_gen_id }}">
          {% if block.settings.sidebar_right_title != blank %}
            <h3 class="ai-editorial-sidebar-title-{{ ai_gen_id }}">{{ block.settings.sidebar_right_title }}</h3>
          {% endif %}
          {% if block.settings.sidebar_right_content != blank %}
            <div class="ai-editorial-sidebar-text-{{ ai_gen_id }}">{{ block.settings.sidebar_right_content }}</div>
          {% endif %}
        </div>
      {% endif %}
    </div>

    {% if block.settings.quote_text != blank %}
      <blockquote class="ai-editorial-quote-{{ ai_gen_id }}">
        <p class="ai-editorial-quote-text-{{ ai_gen_id }}">"{{ block.settings.quote_text }}"</p>
        {% if block.settings.quote_author != blank %}
          <cite class="ai-editorial-quote-author-{{ ai_gen_id }}">— {{ block.settings.quote_author }}</cite>
        {% endif %}
      </blockquote>
    {% endif %}

    {% if block.settings.gallery_image_1 or block.settings.gallery_image_2 or block.settings.gallery_image_3 %}
      <div class="ai-editorial-image-gallery-{{ ai_gen_id }}">
        {% for i in (1..3) %}
          {% assign image_key = 'gallery_image_' | append: i %}
          {% assign image = block.settings[image_key] %}
          
          <div class="ai-editorial-gallery-item-{{ ai_gen_id }}">
            {% if image %}
              <img
                src="{{ image | image_url: width: 400 }}"
                alt="{{ image.alt | escape }}"
                loading="lazy"
                width="{{ image.width }}"
                height="{{ image.height }}"
              >
            {% else %}
              <div class="ai-editorial-gallery-placeholder-{{ ai_gen_id }}">
                {{ 'image' | placeholder_svg_tag }}
              </div>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    {% endif %}

    {% if block.settings.cta_title != blank or block.settings.cta_text != blank %}
      <div class="ai-editorial-cta-{{ ai_gen_id }}">
        {% if block.settings.cta_title != blank %}
          <h3 class="ai-editorial-cta-title-{{ ai_gen_id }}">{{ block.settings.cta_title }}</h3>
        {% endif %}
        {% if block.settings.cta_text != blank %}
          <p class="ai-editorial-cta-text-{{ ai_gen_id }}">{{ block.settings.cta_text }}</p>
        {% endif %}
        {% if block.settings.cta_button_text != blank and block.settings.cta_button_link != blank %}
          <a href="{{ block.settings.cta_button_link }}" class="ai-editorial-cta-button-{{ ai_gen_id }}">
            {{ block.settings.cta_button_text }}
          </a>
        {% endif %}
      </div>
    {% endif %}
  </div>
</article>

