{% if media.media_type == 'image' %}
  <figure class="product-thumbnail-custom">
    <img
      srcset="
        {%- if media.width >= 165 -%}{{ media.preview_image | image_url: width: 165 }} 165w,{%- endif -%}
        {%- if media.width >= 360 -%}{{ media.preview_image | image_url: width: 360 }} 360w,{%- endif -%}
        {%- if media.width >= 533 -%}{{ media.preview_image | image_url: width: 533 }} 533w,{%- endif -%}
        {%- if media.width >= 720 -%}{{ media.preview_image | image_url: width: 720 }} 720w,{%- endif -%}
        {%- if media.width >= 940 -%}{{ media.preview_image | image_url: width: 940 }} 940w,{%- endif -%}
        {%- if media.width >= 1066 -%}{{ media.preview_image | image_url: width: 1066 }} 1066w,{%- endif -%}
        {{ image | image_url }} {{ media.width }}w
      "
      src="{{ image | image_url: width: 533 }}"
      sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 130 | divided_by: 4 }}px, (min-width: 990px) calc((100vw - 130px) / 4), (min-width: 750px) calc((100vw - 120px) / 3), calc((100vw - 35px) / 2)"
      alt="{{ image.alt | escape }}"
      class="motion-reduce"
      {% unless lazy_load == false %}
        loading="lazy"
      {% endunless %}
      width="{{ media.width }}"
      height="{{ image.height }}"
    >
  </figure>
{% endif %}